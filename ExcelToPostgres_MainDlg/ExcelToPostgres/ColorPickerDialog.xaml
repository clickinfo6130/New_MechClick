<Window x:Class="ExcelToPostgres.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelToPostgres"
        mc:Ignorable="d"
        Title="색상 선택" 
        Height="200" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <TextBlock Text="색상 코드 입력" FontSize="16" FontWeight="Bold" 
                   Foreground="#37474F" Margin="0,0,0,15"/>

        <!-- 색상 입력 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Border x:Name="ColorPreview" Width="40" Height="40" CornerRadius="4"
                    BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,15,0"/>
            <TextBox x:Name="TxtColorCode" Width="150" Padding="8,6" FontSize="14"
                     VerticalAlignment="Center" TextChanged="TxtColorCode_TextChanged"/>
        </StackPanel>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="취소" Width="80" Click="BtnCancel_Click" Background="#9E9E9E"/>
            <Button Content="선택" Width="80" Click="BtnSelect_Click" Background="#4CAF50"/>
        </StackPanel>
    </Grid>
</Window>
