<Window x:Class="BoltSpecProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="볼트 사양 관리 시스템" Height="900" Width="680"
        MinWidth="680" MinHeight="600"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    
    <Window.Resources>
        <!-- 스타일 정의 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,5,5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ControlStyle" TargetType="Control">
            <Setter Property="Margin" Value="5,2,5,8"/>
            <Setter Property="MinHeight" Value="25"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 상단 메뉴 -->
        <Menu Grid.Row="0">
            <MenuItem Header="파일">
                <MenuItem Header="엑셀 파일 열기" Click="OpenExcel_Click"/>
                <Separator/>
                <MenuItem Header="설정 저장" Click="Save_Click"/>
                <MenuItem Header="설정 불러오기" Click="Load_Click"/>
                <Separator/>
                <MenuItem Header="JSON으로 내보내기" Click="ExportToJson_Click"/>
                <MenuItem Header="DB에 저장 (현재 선택)" Click="SaveToDatabase_Click"/>
                <MenuItem Header="전체 DB 저장 (자동)" Click="SaveAllToDatabase_Click"/>
                <Separator/>
                <MenuItem Header="종료" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="편집">
                <MenuItem Header="초기화" Click="Reset_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- 메인 컨텐츠 영역 -->
        <Grid x:Name="MainContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- ✅ 좌측 메인 영역을 가변 크기로 변경 (기본: *, 데이터 패널 열면: 고정) -->
                <ColumnDefinition x:Name="MainColumn" Width="*" MinWidth="650"/>
                <ColumnDefinition Width="0" x:Name="SplitterColumn"/>
                <ColumnDefinition Width="0" x:Name="DataViewColumn"/>
            </Grid.ColumnDefinitions>
            
            <!-- 좌측 영역 -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- ⭐ 종류 표시 영역 (최상단) -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel x:Name="CategoryPanel" Orientation="Horizontal"/>
                    </Border>
                    
                    <!-- 중간 영역 - Canvas로 자유 배치 -->
                    <Grid Grid.Row="1" Background="#F5F5F5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="250"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 상단 영역 (1번 + 2번 상단) -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="330"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 작도상태 -->
                            <Border Grid.Column="0" Background="#808080" Margin="5">
                                <TextBlock Text="작도상태" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" FontSize="14"/>
                            </Border>
                            
                            <!-- 1번 영역: 동적 컨트롤 배치 영역 (우측 상단) -->
                            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5" Background="White">
                                <ScrollViewer x:Name="ScrollViewer1" 
                                            VerticalScrollBarVisibility="Auto" 
                                            HorizontalScrollBarVisibility="Auto"
                                            SizeChanged="ScrollViewer_SizeChanged">
                                    <Canvas x:Name="DynamicControlCanvas1" 
                                            Background="Transparent"
                                            MinWidth="300"
                                            MinHeight="200"
                                            AllowDrop="True"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                        
                        <!-- 2번 영역: 동적 컨트롤 배치 영역 (하단 전체) -->
                        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5" Background="White">
                            <ScrollViewer x:Name="ScrollViewer2" 
                                        VerticalScrollBarVisibility="Auto" 
                                        HorizontalScrollBarVisibility="Auto"
                                        SizeChanged="ScrollViewer_SizeChanged">
                                <Canvas x:Name="DynamicControlCanvas2" 
                                        Background="Transparent"
                                        MinWidth="300"
                                        MinHeight="300"
                                        AllowDrop="True"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                    
                    <!-- 하단 버튼 -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="각도" Height="35" Margin="2" Click="Angle_Click"/>
                            <Button Grid.Column="1" Content="작도옵션" Height="35" Margin="2" Click="DrawOption_Click"/>
                        </Grid>
                        
                        <Button Grid.Column="1" Content="데이터보기 >>" Height="35" Margin="2" Click="ToggleDataView_Click"/>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="확인" Width="120" Height="35" Margin="2" Click="Confirm_Click"/>
                            <Button Content="작도취소" Width="120" Height="35" Margin="2" Click="Cancel_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- GridSplitter -->
            <GridSplitter x:Name="DataViewSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#CCCCCC" Visibility="Collapsed"/>
            
            <!-- 우측 데이터 보기 영역 -->
            <Border x:Name="DataViewBorder" Grid.Column="2" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 탭 컨트롤 -->
                    <TabControl Grid.Row="0" Height="40" Background="#E0F0FF">
                        <TabItem Header="이미지 불러오기" Background="#4A90E2" Foreground="White">
                            <TextBlock Text="주요치수 표기 이미지" Margin="10"/>
                        </TabItem>
                        <TabItem Header="이미지 삭제" Background="LightGray">
                            <TextBlock Text="이미지 삭제" Margin="10"/>
                        </TabItem>
                    </TabControl>
                    
                    <!-- 데이터 영역 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5">
                            <!-- 주요치수 표기 이미지 -->
                            <Border Background="#E0F0FF" Height="250" Margin="5">
                                <TextBlock Text="주요치수 표기 이미지" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            
                            <!-- 주요치수 DATA 보기 -->
                            <Border Background="#E0F0FF" Height="250" Margin="5">
                                <TextBlock Text="주요치수 DATA 보기" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
                            </Border>
                            
                            <!-- 제질정보 -->
                            <Border Background="#E0F0FF" MinHeight="100" Margin="5">
                                <TextBlock Text="제질정보" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
                            </Border>
                            
                            <!-- 제료특성 -->
                            <Button Content="제료특성 >>" Height="35" Margin="5" Click="MaterialProperties_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 하단 상태바 -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="준비"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
