<UserControl x:Class="PartManager.Views.CategorySelectorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1E1E2E"
             SizeChanged="OnSizeChanged">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252540" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="부품 카테고리 선택" 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="txtSelectionSummary"
                               Text="카테고리를 선택하세요" 
                               FontSize="11" 
                               Foreground="#A0A0B0"
                               Margin="0,4,0,0"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <Border x:Name="borderConnectionStatus"
                        Grid.Column="1" 
                        Background="#E74C3C"
                        CornerRadius="3"
                        Padding="6,3"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="txtConnectionStatus"
                               Text="연결 안됨"
                               Foreground="White"
                               FontSize="10"/>
                </Border>
            </Grid>
        </Border>

        <!-- ==================== ACCORDION MODE ==================== -->
        <ScrollViewer x:Name="accordionContainer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
            <StackPanel>
                <!-- Section 1 -->
                <Border x:Name="section1Border" Background="#252540" CornerRadius="8" Margin="0,0,0,6">
                    <StackPanel>
                        <Border x:Name="section1Header" Background="#2D2D44" CornerRadius="8,8,0,0" Padding="12,10" Cursor="Hand" MouseLeftButtonDown="OnSection1HeaderClick">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="section1Arrow" Text="▼" Foreground="#808090" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="VENDOR · 업체" Grid.Column="1" Foreground="#808090" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Border x:Name="section1SelectedBadge" Grid.Column="2" Background="#3498DB" CornerRadius="3" Padding="8,3" Visibility="Collapsed">
                                    <TextBlock x:Name="section1SelectedText" Text="" Foreground="White" FontSize="11"/>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="section1Content" Background="#252540" CornerRadius="0,0,8,8" Padding="10,6,10,10">
                            <StackPanel x:Name="mainCategoryPanel"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Section 2 -->
                <Border x:Name="section2Border" Background="#252540" CornerRadius="8" Margin="0,0,0,6" Visibility="Collapsed">
                    <StackPanel>
                        <Border x:Name="section2Header" Background="#2D2D44" CornerRadius="8,8,0,0" Padding="12,10" Cursor="Hand" MouseLeftButtonDown="OnSection2HeaderClick">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="section2Arrow" Text="▼" Foreground="#808090" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="section2Title" Grid.Column="1" Text="CATEGORY · 분류" Foreground="#808090" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Border x:Name="section2SelectedBadge" Grid.Column="2" Background="#3498DB" CornerRadius="3" Padding="8,3" Visibility="Collapsed">
                                    <TextBlock x:Name="section2SelectedText" Text="" Foreground="White" FontSize="11"/>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="section2Content" Background="#252540" CornerRadius="0,0,8,8" Padding="10,6,10,10">
                            <StackPanel x:Name="subCategoryPanel"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Section 3 -->
                <Border x:Name="section3Border" Background="#252540" CornerRadius="8" Margin="0,0,0,6" Visibility="Collapsed">
                    <StackPanel>
                        <Border x:Name="section3Header" Background="#2D2D44" CornerRadius="8,8,0,0" Padding="12,10" Cursor="Hand" MouseLeftButtonDown="OnSection3HeaderClick">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="section3Arrow" Text="▼" Foreground="#808090" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="section3Title" Grid.Column="1" Text="PARTS · 부품" Foreground="#808090" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Border x:Name="section3SelectedBadge" Grid.Column="2" Background="#3498DB" CornerRadius="3" Padding="8,3" Visibility="Collapsed">
                                    <TextBlock x:Name="section3SelectedText" Text="" Foreground="White" FontSize="11"/>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="section3Content" Background="#252540" CornerRadius="0,0,8,8" Padding="10,6,10,10">
                            <StackPanel x:Name="midCategoryPanel"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Section 4 -->
                <Border x:Name="section4Border" Background="#252540" CornerRadius="8" Margin="0,0,0,6" Visibility="Collapsed">
                    <StackPanel>
                        <Border x:Name="section4Header" Background="#2D2D44" CornerRadius="8,8,0,0" Padding="12,10" Cursor="Hand" MouseLeftButtonDown="OnSection4HeaderClick">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="section4Arrow" Text="▼" Foreground="#808090" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="section4Title" Grid.Column="1" Text="상세 부품" Foreground="#808090" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Border x:Name="section4SelectedBadge" Grid.Column="2" Background="#3498DB" CornerRadius="3" Padding="8,3" Visibility="Collapsed">
                                    <TextBlock x:Name="section4SelectedText" Text="" Foreground="White" FontSize="11"/>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="section4Content" Background="#252540" CornerRadius="0,0,8,8" Padding="10,6,10,10">
                            <StackPanel x:Name="partTypePanel"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ==================== GRID MODE ==================== -->
        <Grid x:Name="gridContainer" Grid.Row="1" Visibility="Collapsed" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" MinWidth="120"/>
                <ColumnDefinition Width="*" MinWidth="140"/>
                <ColumnDefinition Width="*" MinWidth="140"/>
                <ColumnDefinition Width="*" MinWidth="140"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: VENDOR -->
            <Border Grid.Column="0" Background="#252540" CornerRadius="8" Margin="0,0,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#2D2D44" CornerRadius="8,8,0,0" Padding="10,8">
                        <TextBlock Text="VENDOR · 업체" Foreground="#808090" FontSize="10" FontWeight="SemiBold"/>
                    </Border>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="gridMainCategoryPanel" Margin="6"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Column 2: CATEGORY -->
            <Border Grid.Column="1" Background="#252540" CornerRadius="8" Margin="4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#2D2D44" CornerRadius="8,8,0,0" Padding="10,8">
                        <TextBlock x:Name="gridColumn2Header" Text="CATEGORY · 분류" Foreground="#808090" FontSize="10" FontWeight="SemiBold"/>
                    </Border>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="gridSubCategoryPanel" Margin="6"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Column 3: PARTS -->
            <Border Grid.Column="2" Background="#252540" CornerRadius="8" Margin="4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#2D2D44" CornerRadius="8,8,0,0" Padding="10,8">
                        <TextBlock x:Name="gridColumn3Header" Text="PARTS · 부품" Foreground="#808090" FontSize="10" FontWeight="SemiBold"/>
                    </Border>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="gridMidCategoryPanel" Margin="6"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Column 4: 상세 -->
            <Border Grid.Column="3" Background="#252540" CornerRadius="8" Margin="4,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#2D2D44" CornerRadius="8,8,0,0" Padding="10,8">
                        <TextBlock x:Name="gridColumn4Header" Text="상세 부품" Foreground="#808090" FontSize="10" FontWeight="SemiBold"/>
                    </Border>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="gridPartTypePanel" Margin="6"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Message Area -->
        <Border x:Name="messageArea" Grid.Row="2" Background="#2D2D44" Padding="10" Visibility="Collapsed">
            <TextBlock x:Name="txtMessage" Foreground="#F39C12" FontSize="11" TextWrapping="Wrap"/>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#252540" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="초기화" Click="OnClearSelection" Background="#555555" Foreground="White" Padding="12,6" BorderThickness="0" Cursor="Hand" FontSize="11"/>
                <Button x:Name="btnConfirm" Grid.Column="2" Content="부품 선택 →" Click="OnConfirmSelection" Background="#2ECC71" Foreground="White" Padding="16,6" FontSize="11" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
